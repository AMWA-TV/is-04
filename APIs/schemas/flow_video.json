{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Describes a Video Flow",
  "title": "Video Flow resource",
  "allOf": [
    { "$ref": "flow_core.json" },
    {
      "type": "object",
      "required": [
        "format",
        "frame_width",
        "frame_height",
        "interlace_mode",
        "colorspace"
      ],
      "properties": {
        "format": {
          "description": "Format of the data coming from the Flow as a URN",
          "type": "string",
          "enum": [
            "urn:x-nmos:format:video"
          ],
          "format": "uri"
        },
        "frame_width": {
          "description" : "width of the picture in pixels",
          "type" : "integer"
        },
        "frame_height" : {
          "description" : "height of the picture in pixels",
          "type" : "integer"
        },
        "interlace_mode" : {
          "description" : "interlaced video mode for frames in this flow - this attribute can be omitted if mode is progressive, but must be included if video has been captured as two separate interlaced fields",
          "type" : "string",
          "enum" : [
            "progressive",
            "interlaced_tff",
            "interlaced_bff",
            "interlaced_psf"
          ]
        },
        "colorspace" : {
          "description" : "Colorspace used for the video",
          "type" : "string",
          "enum" : [
            "BT601",
            "BT709",
            "BT2020",
            "BT2100"
          ]
        },
        "transfer_characteristic": {
          "description": "",
          "type": "string",
          "default": "SDR",
          "enum": [
            "SDR",
            "HLG",
            "PQ"
          ]
        }
      }
    }
  ]
}
