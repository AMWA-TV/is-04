{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Describes a SMPTE 2022-6 Receiver",
  "title": "SMPTE 2022-6 Receiver resource",
  "allOf": [
    { "$ref": "receiver_core.json" },
    {
      "type": "object",
      "required": [
        "format",
        "caps"
      ],
      "properties": {
        "format": {
          "description": "Type of Flow accepted by the Receiver as a URN",
          "type": "string",
          "enum": [
            "urn:x-nmos:format:mux:sdi"
          ],
          "format": "uri"
        },
        "caps": {
          "description": "Capabilities",
          "type": "object",
          "required": ["media_types"],
          "properties": {
            "media_types": {
              "description": "Subclassification of the formats accepted using IANA assigned media types",
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "enum": [
                  "video/SMPTE2022-6"
                ]
              }
            }
          }
        }
      }
    }
  ]
}
