{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Describes an audio Flow",
  "title": "Audio Flow resource",
  "allOf": [
    { "$ref": "flow_core.json" },
    {
      "type": "object",
      "required": [
        "format",
        "media_type",
        "sample_rate",
        "bit_depth"
      ],
      "properties": {
        "format": {
          "description": "Format of the data coming from the Flow as a URN",
          "type": "string",
          "enum": [
            "urn:x-nmos:format:audio"
          ],
          "format": "uri"
        },
        "media_type": {
          "description": "Subclassification of the format using IANA assigned media types",
          "type": "string",
          "anyOf": [
            {
              "enum": [
                "audio/L24",
                "audio/L16"
              ]
            },
            {
              "pattern": "^audio\\/[^\\s\\/]+$"
            }
          ]
        },
        "sample_rate" : {
          "description": "number of audio samples per second for this Flow - denominator only required if non-integer rate.",
          "type": "object",
          "required" : [
            "numerator"
          ],
          "properties" : {
            "numerator" : {
              "description" : "numerator",
              "type" : "integer"
            },
            "denominator" : {
              "description" : "denominator",
              "type" : "integer",
              "default" : 1
            }
          }
        },
        "bit_depth" : {
          "description" : "bit depth of the audio samples",
          "type" : "integer"
        }
      }
    }
  ]
}
